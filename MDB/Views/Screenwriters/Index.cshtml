@model IEnumerable<MDB.Models.Screenwriter>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Born)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.ImgSrc" width="90" height="114" />
            </td>
            <td style="vertical-align:middle">
                @Html.ActionLink(@Html.DisplayFor(modelItem => item.Fullname).ToString(), "Details", "Screenwriters", new { id = item.PersonID }, null)
            </td>
            <td class="col-xs-6" style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.Born)
            </td>
            <td style="vertical-align:middle">
                @Html.ActionLink("Edit", "Edit", new { id = item.PersonID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PersonID })
            </td>
        </tr>
    }

</table>
